<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_editcard"
    tools:context=".activities.edit_card">

    <RelativeLayout
        android:id="@+id/rl_headerEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="-190dp">

        <ImageView
            android:id="@+id/iv_editheader"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:srcCompat="@drawable/headeredit" />

        <ImageView
            android:id="@+id/iv_logoheader"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/logopocketcard"
            android:background="@drawable/circlesolid"/>

        <ImageView
            android:id="@+id/iv_logonameheader"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/pocketcard" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_pictureLogoEditCard"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="310dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlesolid">
        </com.google.android.material.imageview.ShapeableImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_editprofilecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundlogin"
        android:padding="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_occupationEditcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroundlogin"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:hint="Occupation">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/work" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_companynameEditcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/et_occupationEditcard"
            android:background="@drawable/backgroundlogin"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:hint="Company Name">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_companyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/companyname" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_locationEditcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/et_companynameEditcard"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/backgroundlogin"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:hint="Location">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/locationpurple" />

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/bt_editProfilecard"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_locationEditcard"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:drawableLeft="@drawable/editwhite"
            android:text="Save"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>


    <!--<RelativeLayout
        android:id="@+id/rl_footerEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="-190dp">

        <ImageView
            android:id="@+id/iv_editfooter"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:srcCompat="@drawable/footer" />
    </RelativeLayout>-->

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/card_menu"
        android:id="@+id/nav_viewEditcard"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>