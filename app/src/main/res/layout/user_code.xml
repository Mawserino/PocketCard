<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Qr"
    tools:context=".activities.Qr_profile"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="-190dp"
            >
        <ImageView
            android:id="@+id/iv_editheader"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:srcCompat="@drawable/headeredit" />

        <ImageView
            android:id="@+id/iv_logoheader"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/logopocketcard"
            android:background="@drawable/circlesolid"/>

        <ImageView
            android:id="@+id/iv_logonameheader"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/pocketcard" />

            </RelativeLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_pictureLogoEdit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="155dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circlesolid"
            app:shapeAppearanceOverlay="@style/circleImageView"></com.google.android.material.imageview.ShapeableImageView>

        <ImageView
            android:id="@+id/userQr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/userName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/hollow"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_below="@+id/userName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/rounded_button_hollow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_pictureLogoEdit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:text="NAME"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/card_menu"
        android:id="@+id/nav_Qr"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>