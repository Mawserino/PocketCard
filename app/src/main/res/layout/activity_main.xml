<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header"
        tools:layout_editor_absoluteX="26dp" />

    <ImageView
        android:id="@+id/iv_footer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="0dp"
        android:layout_marginBottom="-10dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/footer"
        tools:layout_editor_absoluteX="26dp" />



    <ImageView
        android:id="@+id/iv_logomain"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circlesolid"
        android:src="@drawable/logopocketcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="POCKET CARD"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:transitionName="login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logomain" />

    <RelativeLayout
        android:id="@+id/rl_loginpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/backgroundlogin"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_header"
        tools:layout_editor_absoluteX="15dp">\

        <!--<EditText
            android:id="@+id/et_usernamelogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_usernamelogin"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_person"
            android:drawablePadding="30dp"
            android:inputType="text"
            android:padding="10dp" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_usernamelogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:hint="Email"
>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_person" />

        </com.google.android.material.textfield.TextInputLayout>



        <!--<EditText
            android:id="@+id/et_passwordlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_passwordlogin"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_lock"
            android:drawablePadding="30dp"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="35dp"/>-->


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_passwordlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:layout_marginBottom="25dp"
            android:hint="password"
            android:layout_below="@id/et_usernamelogin">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_lock"
                android:drawablePadding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="45dp"
        app:layout_constraintEnd_toEndOf="@+id/rl_loginpage"
        app:layout_constraintStart_toStartOf="@id/rl_loginpage"
        app:layout_constraintTop_toBottomOf="@id/rl_loginpage">

        <Button
            android:id="@+id/btLogin"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/login"
            android:text="LOG IN"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-20dp"
        android:gravity="end"
        app:layout_constraintBottom_toTopOf="@id/rl_loginpage"
        app:layout_constraintEnd_toEndOf="@id/rl_loginpage">

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="REGISTER"
            android:backgroundTint="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:onClick="register"
            android:clickable="true">

        </Button>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>