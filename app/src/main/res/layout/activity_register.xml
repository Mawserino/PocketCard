<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Register">

    <RelativeLayout
        android:id="@+id/rl_regisHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/headerregis"
            android:layout_marginTop="-40dp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/iv_logoRegis"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logopocketcard"
            android:background="@drawable/circlesolid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/iv_logonameRegis"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:src="@drawable/pocketcard"
            android:layout_below="@id/iv_logoRegis"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:id="@+id/iv_pictureLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logopocketcard"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/iv_logonameRegis"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlesolid">
        </ImageView>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/iv_logonameRegis"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/iv_pictureLogo"
            android:background="@drawable/circlesolid"
            android:padding="0dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_infoRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_regisHeader"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/backgroundlogin"
        android:layout_marginBottom="25dp"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_usernameRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:hint="Name">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_person" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_emailRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:layout_below="@+id/et_usernameRegis"
            android:padding="10dp"
            android:hint="Email">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_passwordRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:layout_marginBottom="25dp"
            android:hint="password"
            android:layout_below="@id/et_emailRegis">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_lock"
                android:drawablePadding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_infoRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="35dp">

        <Button
            android:id="@+id/btn_signUp"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:background="@drawable/circlesolid"
            android:text="Sign up"/>

        <Button
            android:id="@+id/btn_cancelRegis"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circlesolid"
            android:text="cancel"/>


    </RelativeLayout>






</RelativeLayout>